<!DOCTYPE html>
<html>
<head>
  <title>Welcome User</title>
  <style>

body {
    background-color: #f2f2f2;
    font-family: Arial, sans-serif;
    font-size: 16px;
    line-height: 1.5;
  }
  
  h1 {
    color: #333;
  }
  
  p {
    margin: 10px 0;
  }
  
  table {
    border-collapse: collapse;
    margin: 20px 0;
    width: 100%;
  }
  
  th, td {
    border: 1px solid #ccc;
    padding: 8px;
    text-align: left;
  }
  
  th {
    background-color: #f2f2f2;
  }
  
  ul {
    list-style: disc;
    margin-left: 20px;
  }
  
  form {
    margin: 20px 0;
  }
  
  label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }
  
  input[type="text"],
  input[type="date"],
  input[type="time"],
  input[type="submit"] {
    border: 1px solid #ccc;
    border-radius: 3px;
    font-family: Arial, sans-serif;
    font-size: 16px;
    padding: 8px;
    margin-right: 10px;
  }
  
  input[type="text"],
  input[type="date"],
  input[type="time"] {
    width: 200px;
  }
  
  input[type="submit"] {
    background-color: #4CAF50;
    color: #fff;
    cursor: pointer;
  }
  
  .btn {
    display: inline-block;
    background-color: #4CAF50;
    color: #fff;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 3px;
    margin-right: 10px;
  }
  
  .btn:hover {
    background-color: #3e8e41;
  }
  
  button {
    background-color: #4CAF50;
    color: #fff;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 3px;
    border: none;
    cursor: pointer;
  }
  
  button:hover {
    background-color: #3e8e41;
  }
  </style>
</head>
<body>
  <h1>Welcome <%= user.name %>!</h1>
  <p>Phone: <%= user.phone %></p>
  <p>Email: <%= user.email %></p>
  <table>
    <tr>
      <th>Maintenance History</th>
    </tr>
    <tr>
      <td>
        <% if (user.data && user.data.length > 0) { %>
          <ul>
            <% user.data.forEach((data) => { %>
              <li><%= data %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No data available</p>
        <% } %>
      </td>
    </tr>
  </table>
  <table>
    <tr>
      <th>Payment History</th>
    </tr>
    <tr>
      <td>
        <% if (user.data2 && user.data2.length > 0) { %>
          <ul>
            <% user.data2.forEach((data2) => { %>
              <li><%= data2 %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No data available</p>
        <% } %>
      </td>
    </tr>
  </table>
  <form action="/user-data" method="POST">
    <label for="data">Enter Maintenance Data:</label>
    <input type="text" id="data" name="data" required>
    <br>
    <input type="submit" value="Submit">
  </form>
  <h2>Payment History Balace: <%= sum %></h2>

  <form action="/user-data2" method="POST">
    <label for="data2">Enter Payment Data:</label>
    <input type="number" id="data2" name="data2" required>
    <br>
    <input type="submit" value="Submit">
  </form>
  <% if (confirmationMessage) { %>
    <p><%= confirmationMessage %></p>
  <% } %>
  <a href="/eventslist">View Events</a>
  <form method="POST" action="/book-event">
    <input type="text" name="eventName" placeholder="Event Name" required>
    <input type="date" name="eventDate" required>
    <input type="time" name="startTime" required>
    <input type="time" name="endTime" required>
    <input type="submit" value="Book Event">
  </form>
  <br>
  <a href="/viewprospective2" class="btn">View Prospective Customers</a><br>
  <form method="POST" action="/user-logout">
    <button type="submit">Logout</button>
  </form>
</body>
</html>