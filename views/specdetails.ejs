<!DOCTYPE html>
<html>
<head>
  <title>Specific User Details</title>
  <style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  /* Set the page background color */
  body {
    background-color: #f2f2f2;
    font-family: Arial, sans-serif;
    font-size: 16px;
  }
  
  /* Set the table styles */
  table {
    margin: 20px auto;
    border-collapse: collapse;
    width: 100%;
  }
  
  th, td {
    padding: 10px;
    text-align: center;
  }
  
  th {
    background-color: #008CBA;
    color: #fff;
  }
  
  td {
    background-color: #fff;
  }
  
  /* Set the heading styles */
  h1, h2 {
    text-align: center;
    margin: 20px 0;
  }
  
  /* Set the link styles */
  a {
    display: inline-block;
    margin: 20px;
    padding: 10px;
    
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.3s ease;
  }
  
  a:hover {
    background-color: #005f73;
  }
  
  /* Set the form styles */
  form {
    text-align: center;
    margin: 20px 0;
  }
  
  input[type="text"], input[type="submit"], button[type="submit"] {
    padding: 10px;
    margin: 5px;
    border-radius: 5px;
    border: none;
    background-color: #91e3f3;
    color: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  input[type="text"] {
    width: 70%;
  }
  
  input[type="text"]:focus {
    outline: none;
    box-shadow: 0 0 5px #fcfdfd;
  }
  
  input[type="submit"]:hover, button[type="submit"]:hover {
    background-color: #eef4f5;
  }
  
  /* Set the data list styles */
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  li {
    margin: 5px 0;
    padding: 5px;
    background-color: #ddd;
    border-radius: 5px;
    text-align: left;
  }
  
  /* Set the message styles */
  p {
    text-align: center;
    color: #aaa;
    margin: 20px 0;
  }
  </style>
</head>
<body>
  <h1>Specific User Details</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Password</th>
      <th>Maintenance Data</th>
      <th>Payment Data</th>
    </tr>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= user.password %></td>
      <td>
        <% if (user.data && user.data.length > 0) { %>
          <ul>
            <% user.data.forEach((data) => { %>
              <li><%= data %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No data available</p>
        <% } %>
      </td>
      <td>
        <% if (user.data2 && user.data2.length > 0) { %>
          <ul>
            <% user.data2.forEach((data2) => { %>
              <li><%= data2 %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No data available</p>
        <% } %>
      </td>
    </tr>
  </table>
  <h2>Add Data</h2>
  <form method="POST" action="/add-data/<%= user._id %>">
    <input type="text" name="data" placeholder="Enter Maintainenance Update" required>
    <input type="submit" value="Add">
  </form>
  <form method="POST" action="/add-data2/<%= user._id %>">
    <input type="text" name="data2" placeholder="Enter charge type" required>
    <input type="number" name="data3" placeholder="Enter charge amount" required>
    <input type="submit" value="Add">
  </form>
  <form action="/clear-payment-history/<%= user._id %>" method="POST">
    <button type="submit">Clear Payment History</button>
  </form>
  <form method="POST" action="/logout">
    <button type="submit">Logout</button>
  </form>

  <form method="GET" action="/details">
    <button type="submit">View Details</button>
  </form>
  <h2>Payment History BALANCE: <%= sum %></h2>
</body>
</html>
